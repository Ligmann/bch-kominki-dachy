mixin headquarters-toogle(data = [])
	//- ul(class="nav" id="myTab" role='tablist')
	//- 	each item, index in data
	//- 		li(class="nav-item" role="presentation")
	//- 			a(class="headquarters__button nav-item" class=index==0?'active':'' id=item.id+'-tab' data-bs-toggle='tab' href='#'+item.id role='tab' aria-controls=item.id aria-selected=index==0?'true':'false')=item.city
	div(class="headquarters__wrap tab-content" id="myTabContent")
		each item, index in data
			div(class="tab-pane" class=index==0?'active fade show':'' id=item.id role="tabpanel" aria-labelledby=item.id+'-tab')
				div(class="row")
					div(class="col-lg-7 headquarters__images-wrap")
						div(class="headquarters__images")
							img(src=item.mapImage alt="" class="headquarters__images-items")
					div(class="col-lg-5")
						div(class="headquarters__box-content")
							h3 BCH Kominki Dachy
								span(class="headquarters__color-header")=item.city
							address(class="headquarters__address")
								b Siedziba firmy
								span=item.street
								span=item.postCode
							span(class="headquarters__contact-details")
								b Dane do korespondencji
								a(href=item.phoneURL)=item.phone
								a(href=item.phoneURLTwo)=item.phoneTwo
								a(href=item.emailURL)=item.email
							span(class="headquarters__opening-hours")
								b Godziny otwarcia <br />
								=item.openingHours
								<br />
								=item.openingHoursTwo
							a(href=item.locationURL class="primary-button headquarters__button-maps")
									| Sprawdź dojazd
									span(class="button-arrow-right")

